@using ViewModel.SPA
@model MainViewModel
@{
    Layout = "~/Areas/SPA/Views/Shared/MyLayout.cshtml";
}

@section TitleSection{

    Single Page Application
}

@section HeaderSection{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <script type="text/javascript">
        function OpenAddNew() {
            $.get("/SPA/Main/AddNew").then
            (
                function (r) {
                    $("<div id='DivCreateEmployee'></div>").html(r).
                        dialog({
                            width: 'auto', height: 'auto', modal: true, title: "Create New Employee",
                            close: function () {
                                $('#DivCreateEmployee').remove();
                            }
                        });
                }
            );
        }

        function OpenBulkUpload() {
            $.get("/SPA/SPABulkUpload/Index").then(
                function (r) {
                    $("<div id='DivBulkUpload'></div>").html(r).dialog({
                        width: 'auto', height: 'auto', modal: true, title: "Create New Employee", close: function () {
                            $('#DivBulkUpload').remove();
                        }
                    });
                }
                );
        }

    </script>
}

@section ContentBody {
    @{
        Html.RenderAction("GetAddNewLink");
        Html.RenderAction("EmployeeList");
    }

}
